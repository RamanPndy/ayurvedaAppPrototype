<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User!"
        android:id="@+id/userText"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Here are the following instructions that you should follow before starting the test : "
        android:id="@+id/textView2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1. Questions are divided into two categories which are Lifetime and Present. "
        android:id="@+id/textView3"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2. At the end of the quiz you will get your Digetion Type. "
        android:id="@+id/textView4"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="3. You have to select one option in both categories. "
        android:id="@+id/textView8"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="1dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="4. You will be shown some Auyrvedic Tips in the meanwhile of the test. "
        android:id="@+id/textView9"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="1dp"/>
    <Button
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:text="Take Test"
        android:id="@+id/testBtn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="100dp"
        />


</RelativeLayout>